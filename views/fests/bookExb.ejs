<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Poppins|Audiowide&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../assets/css/style.css">
    <title>e-Xhibyte | Book Exhibitions</title>
</head>
<body>
    <div class="nav-bar">
        <div class="logo">
            <a href="/"><h1>e-Xhibyte</h1></a>
            <h6><i>Host your dream from your device.</i></h6>
        </div>
        <div class="nav">
            <a href="/bookExb/add">New Book Exhibition</a>
            <span>|</span>
            <a href="/profile">Profile</a>
            <span>|</span>   
            <a href="/home">Home</a>
        </div>
    </div>

    <div class="content-news">
        <h1>News Feed</h1>
        <div class="news-section-header">         
            <div class="book-fair-section active">
                <h3><a href="/bookExb">Book Exhibitions</a></h3>
            </div>
        </div>
        <div class="news-items">
            <% exbList.map(exb => { %>
            <div class="news-item">
                <div class="item-img">
                    <img src="../../uploads/<%= exb.imgUrl %>" alt="">
                </div>
                <div class="item-text">
                    <div class="event-name">
                        <h2><%= exb.name %></h2>
                    </div>
                    <div class="event-place">
                        <p><%= exb.location %></p>
                    </div>
                    <div class="event-duration">
                        <p><strong>From:</strong> <%= new Date(exb.startDate).toDateString() %></p>
                        <p><strong>To:</strong> <%= new Date(exb.endDate).toDateString() %></p>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <div class="status-url-wrapper">
                        <div class="status">
                            <ul class=<%= exb.status %>>
                                <li><%= exb.statusMessage %></li> 
                            </ul>
                        </div>
                        <div class="web-url">
                            <% if ( exb.status === 'upcoming' ) { %>
                                <a href="/bookExb/addApplicant/<%= exb._id %>">CONTRIBUTE</a> &nbsp;
                            <% } %>
                            <% if ( exb.status === 'live' ) { %>
                                <a href="/bookExb/viewBooExb/<%= exb._id %>">VISIT</a>
                            <% } %>
                            <% if ( exb.status === 'past' ) { %>
                                <a href="#" onclick=disabled()>VISIT</a>
                            <% } %>
                        </div>
                    </div>                   
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    
    
    </div>
    <div class="footer">
        <p id="copyright">Copyright &copy; 2020 | Anoroc</p>
    </div>
</body>

<script>
    function disabled() {
        var message = "The Book Exhibition you wish to Visit is Over!";
        alert(message);
    }
</script>
</html>


